<% provide(:title, 'Personal Information') %>
<h1>Personal Information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@kind, url: infonew_path) do |f| %> <!-- Es necesario generar una ruta que lleve a la creacion de la informacion -->
      <!-- Verificar que el render de error menssages nos combiene -->

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :lastname %>
      <%= f.text_field :lastname, class: 'form-control' %>
      
      <%= f.label :born %>
      <%= f.text_field :born, class: 'form-control' %>

      <%= f.label :ocupation %>
      <%= f.text_field :ocupation, class: 'form-control' %>
      
      <%= f.label :soc_stat %>
      <%= f.text_field :soc_stat, class: 'form-control' %>
      
      <%= f.label :page %>
      <%= f.text_field :page, class: 'form-control' %>

      <%= f.label :type %>
      <%= f.text_field :type, class: 'form-control' %>
      
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
      
      <%= f.submit "Save my Information", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
