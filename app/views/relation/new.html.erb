<% provide(:title, 'New relation') %>
<h1>New relation</h1>
<h2>Search Employee</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@kind, url: relation_index_path) do |f| %>

      <%= f.label "Employee's name /or email" %>
      <%= f.text_field :person_id, class: 'form-control' %>
      
      <%= f.hidden_field :company_id, value: current_user.company.id %>

      <%= f.hidden_field :sudo, value: current_user.company.id %>
      
      <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
  </div>
