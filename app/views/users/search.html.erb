<% provide(:title, "Search") %>
<h1>Update your account</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: find_path) do |f| %>

      <%= f.label "Email" %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.submit "Search by email", class: "btn btn-primary" %>
    <% end %>
    <%= form_for(@company, url: find_path) do |f| %>

      <%= f.label "Company name" %>
      <%= f.text_field :name_co, class: 'form-control' %>

      <%= f.label "Departament" %>
      <%= f.text_field :type_co, class: 'form-control' %>

      <%= f.label "Company name" %>
      <%= f.text_field :name_co, class: 'form-control' %>
      <%= f.submit "Search for company", class: "btn btn-primary" %>
    <% end %>

    <%= form_for(@person, url: find_path) do |f| %>

      <%= f.label "Name" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label "Ocupation" %>
      <%= f.text_field :ocupation, class: 'form-control' %>

      <%= f.submit "Search for person", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>